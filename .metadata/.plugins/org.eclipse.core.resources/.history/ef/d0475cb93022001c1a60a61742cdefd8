public class ArrayIntersection {

	public static void main ( String args[]) {

		String[] first = {"red","green","blue"};
		String[] second = {"green","blue","black"};
		String[] answer = arrayIntersection(first,second);
		for ( String a : answer)
			System.out.println(a);
	}
	
	public static String[] arrayIntersection(String[] first, String[] second) {
		
		String[] answer = new String[10];
		
		for (int i=0;i<first.length;i++) {
			for ( int j=0; j<second.length; j++) {
				if ( first[i].equals(second[j])) {
					int k=0;
					while(!answer[k].equals(first[i])) {
						
					}
				}
			}
		}
		
		return answer;
	}
	
	
}
